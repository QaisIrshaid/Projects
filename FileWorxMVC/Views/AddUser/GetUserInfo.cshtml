
@model  string[]
    <h3>Update User : </h3>
    <div class="text-right">@Html.ActionLink("Back", "LoadObjects", "MainPage", new { area = "" }, new { @class = "btn btn-lg btn-default text-center" })</div>
    <br />
    @using (Html.BeginForm("PostUserUpdates", "AddUser", FormMethod.Post))
    {
        <div>
            <table>
                <tr>
                    <td class="lead">Name</td>
                    <td>
                        <input id="name" name="Name" type="text" required value="@Model[0]" />
                    </td>
                </tr>

                <tr>
                    <td class="lead">Login Name</td>
                    <td>
                        <input id="loginName" name="LoginName" type="text" required value="@Model[1]" />
                    </td>
                </tr>
                <tr>
                    <td class="lead">Password</td>
                    <td>
                        <input id="password" name="Password" type="password" required value="@Model[2]" />
                    </td>
                </tr>

            </table>
            <div class="text-center"><h5 id="validation" hidden class="text-danger ">Unvalid Login Name</h5></div>
            <div id="HiddenInputs">
                <input type="hidden" name="LastModifierFileName" value="@Model[3]" />
            </div>
        </div>
        <br />
        <div class="text-center">
            <input type="submit" value="Submit" class="btn btn-lg btn-default text-center" />

        </div>
    }
<script>
    let value="@ViewBag.validation";
    if (value == "false") {
        document.getElementById("validation").removeAttribute("hidden");
    }
</script>




